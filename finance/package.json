{
  "name": "finance-server",
  "version": "1.0.0",
  "description": "Finance module Node.js server with React frontend",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd frontend && npm start",
    "client:build": "cd frontend && npm run build",
    "dev:all": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" \"npm run dev\" \"npm run client\"",
    "install:all": "npm install --legacy-peer-deps && cd frontend && npm install --legacy-peer-deps"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "body-parser": "^1.20.2",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}

